{
  "name": "spryker-sdk/phpstan-spryker",
  "description": "Spryker PHPStan Extensions",
  "license": "MIT",
  "keywords": ["phpstan", "analyzing"],
  "homepage": "https://spryker.com",
  "authors": [
    {
      "name": "Spryker",
      "homepage": "https://spryker.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "phpstan/phpstan": "^0.11.1"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^1.0",
    "localheinz/composer-normalize": "~0.9.0",
    "phing/phing": "^2.16.0",
    "spryker/kernel": "*",
    "squizlabs/php_codesniffer": "^3.3.1",
    "spryker/code-sniffer": "dev-master",
    "slevomat/coding-standard": "^4.7.2",
    "consistence/coding-standard": "^3.5",
    "phpstan/phpstan-strict-rules": "^0.11"
  },
  "autoload": {
    "psr-4": {
      "PHPStan\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPStan\\Test\\": "tests/"
    }
  },
  "scripts": {
    "travis": "vendor/bin/phing",
    "test": "php phpunit.phar",
    "test-setup": "[ ! -f phpunit.phar ] && wget https://phar.phpunit.de/phpunit-6.5.13.phar && mv phpunit-6.5.13.phar phpunit.phar || true",
    "cs-check": "phpcs --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml -v src/ tests/",
    "cs-fix": "phpcbf --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml -v src/ tests/"
  },
  "support": {
    "source": "https://github.com/spryker-sdk/phpstan-spryker"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "use-include-path": true,
    "process-timeout": 600
  }
}
